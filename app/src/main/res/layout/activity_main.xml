<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/share_color_clock"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:background="#9F87A3A8"
        android:gravity="center"
        android:text="@string/share_color_click_text_scheme" />

    <TextView
        android:id="@+id/share_color_clock_system"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:background="#9F87A3A8"
        android:gravity="center"
        android:text="@string/share_color_clock_text_system" />

    <TextView
        android:id="@+id/logger"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/logger_prefix" />

</LinearLayout>